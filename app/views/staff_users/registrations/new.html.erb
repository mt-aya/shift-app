<div class="staff-reg sign">
  <%= link_to root_path do %>
    <h1>ShiftLink</h1>
  <% end %>
  <div class="signup-wrapper">
    <h2 class="form-header-text">ShiftLinkアカウント登録</h2>
    <%= form_with model: @staff_user, url: staff_user_registration_path, class: 'registration-main', local: true do |f| %>
      <div class="form-wrapper">
        <%= render "shared/error_messages", locals: { model: f.object } %>

        <div class="form-group">
          <div class="form-text-wrapper">
            <%= f.label :email, "メールアドレス", class: "form-text" %>
            <span class="indispensable">必須</span>
          </div>
          <div class="input-wrapper">
            <%= f.email_field :email, autofocus: true, class: "input-default", placeholder: "sample@shift.com" %>
          </div>
        </div>

        <div class="form-group">
          <div class="form-text-wrapper">
            <%= f.label :id_name, "ユーザーID", class: "form-text" %>
            <span class="indispensable">必須</span>
          </div>
          <div class="input-wrapper">
            <%= f.text_field :id_name, class: "input-default", placeholder: "usershift" %>
            <p class="form-notice">6~16文字の半角英数字が使用できます</p>
          </div>
        </div>

        <div class="form-group">
          <div class="form-text-wrapper">
            <%= f.label :password, "パスワード", class: "form-text" %>
            <span class="indispensable">必須</span>
          </div>
          <div class="input-wrapper">
            <%= f.password_field :password, class: "input-default", placeholder: "********" %>
            <p class="form-notice">英・数どちらも含む6文字以上</p>
          </div>
        </div>

        <div class="form-group">
          <div class="form-text-wrapper">
            <%= f.label :password_confirmation, "パスワード（確認）", class: "form-text" %>
            <span class="indispensable">必須</span>
          </div>
          <div class="input-wrapper">
            <%= f.password_field :password_confirmation, class: "input-default", placeholder: "********" %>
          </div>
        </div>

        <div class="form-group">
          <div class="form-text-wrapper">
            <%= f.label "お名前（全角）", class: "form-text" %>
            <span class="indispensable">必須</span>
          </div>
          <div class="input-wrapper input-name-group">
            <%= f.text_field :last_name, class: "input-name", placeholder: "山田" %>
            <%= f.text_field :first_name, class: "input-name", placeholder: "太郎" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "staff-signup-btn" %>
        </div>
      </div>
    <% end %>
    <div class="login-u-box">
      <%= link_to '既にアカウントをお持ちの方はこちら', new_staff_user_session_path, class: "staff-login-link" %>
    </div>
  </div>
</div>