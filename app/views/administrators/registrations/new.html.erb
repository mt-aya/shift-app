<h2 class="form-header-text">シフト管理者登録</h2>

<%= form_with model: @administrator, url: administrator_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "shared/error_messages", locals: { model: f.object } %>

  <div class="form-group">
    <div class="form-text-wrapper">
      <%= f.label :email, "メールアドレス", class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, autofocus: true, class: "input-default", placeholder: "sample@shift.com" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrapper">
      <%= f.label :password, "パスワード", class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class: "input-default", placeholder: "********" %>
    <p class="form-notice">英字・数字どちらも含む6文字以上の半角英数記号が使用できます</p>
  </div>

  <div class="form-group">
    <div class="form-text-wrapper">
      <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class: "input-default", placeholder: "********" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrapper">
      <%= f.label :company, "企業名", class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :company, class: "input-default", placeholder: "ShiftLink株式会社" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrapper">
      <%= f.label "お名前", class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <div class="input-name-group">
      <%= f.text_area :last_name, class: "input-name", placeholder: "山田" %>
      <%= f.text_area :first_name, class: "input-name", placeholder: "太郎" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "admin-register-btn" %>
  </div>
<% end %>