<div class="owner-session sign">
  <%= link_to root_path do %>
    <h1>ShiftLink</h1>
  <% end %>
  <div class="login-wrapper">
    <h2>シフト管理者としてログイン</h2>
    <%= form_with model: @owner, url: owner_session_path, class: "session-main", local: true do |f| %>
      <div class="form-wrapper">
        <div class="login-flass-message">
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <div class="form-group">
          <div class="form-text-wrapper">
            <%= f.label :email, "メールアドレス", class: "form-text" %>
          </div>
          <div class="input-wrapper">
            <%= f.email_field :email, autofocus: true, class: "input-default" %>
          </div>
        </div>

        <div class="form-group">
          <div class="form-text-wrapper">
            <%= f.label :password, "パスワード", class:"form-text" %>
          </div>
          <div class="input-wrapper">
            <%= f.password_field :password, class: "input-default" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "owner-login-btn" %>
        </div>
      </div>
    <% end %>
    <div class="login-u-box">
      <%= link_to 'シフト管理者用アカウントの作成', new_owner_registration_path, class: "owner-registration-link" %>
    </div>
  </div>
</div>